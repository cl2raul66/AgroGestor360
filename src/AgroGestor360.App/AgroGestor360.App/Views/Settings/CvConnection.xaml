<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="AgroGestor360.App.Views.Settings.CvConnection"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:AgroGestor360.App.ViewModels.Settings"
    x:DataType="vm:CvConnectionViewModel">

    <Grid RowDefinitions="auto,*" RowSpacing="8">
        <Frame Padding="8">
            <Grid ColumnDefinitions="auto,*,auto" ColumnSpacing="8">
                <Label
                    Grid.Column="1"
                    FontSize="18"
                    Text="Conexión"
                    TextTransform="Uppercase"
                    VerticalOptions="Center" />
                <HorizontalStackLayout Grid.Column="2" Spacing="8">
                    <Button
                        Command="{Binding ShowSetURLCommand}"
                        FontFamily="icofont"
                        Text="{StaticResource Plugin}"
                        ToolTipProperties.Text="Establecer conexión" />
                </HorizontalStackLayout>
            </Grid>
        </Frame>
        <Grid Grid.Row="1">
            <Label
                FontSize="16"
                HorizontalOptions="Center"
                Text="{Binding ServerURL, Mode=OneWay, StringFormat='Servidor en {0}.', TargetNullValue='¡No hay URL establecida!'}"
                VerticalOptions="Center" />
        </Grid>
    </Grid>

</ContentView>
