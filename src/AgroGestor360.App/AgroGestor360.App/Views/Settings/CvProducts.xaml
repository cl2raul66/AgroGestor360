                            </RadioButton.Content>
                        </RadioButton>
                    </HorizontalStackLayout>-->
                </VerticalStackLayout>
                <ScrollView Grid.Row="1">
                    <CollectionView
                        ItemsSource="{Binding Offers, Mode=OneWay}"
                        SelectedItem="{Binding SelectedOffert}"
                        SelectionMode="Single">
                        <CollectionView.ItemsLayout>
                            <LinearItemsLayout ItemSpacing="2" Orientation="Vertical" />
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="model:ProductOffering">
                                <Border Style="{StaticResource BorderItem}">
                                    <Grid ColumnDefinitions="auto,*,*" ColumnSpacing="8">
                                        <Label Text="{Binding Id, Mode=OneWay, StringFormat='No. {0}'}" TextColor="{StaticResource White}" />
                                        <Label
                                            Grid.Column="1"
                                            HorizontalOptions="Center"
                                            Text="{Binding Quantity, Mode=OneWay, StringFormat='Cantidad {0}'}"
                                            TextColor="{StaticResource White}" />
                                        <Label
                                            Grid.Column="2"
                                            HorizontalOptions="Center"
                                            Text="{Binding BonusAmount, Mode=OneWay, StringFormat='Cantidad extra {0}'}"
                                            TextColor="{StaticResource White}" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </ScrollView>
                <Frame Grid.Row="2" Padding="8">
                    <Grid ColumnDefinitions="*,auto" ColumnSpacing="8">
                        <HorizontalStackLayout Grid.Column="1" Spacing="8">
                            <!--<BoxView
                            BackgroundColor="{StaticResource Gray300}"
                            CornerRadius="2"
                            WidthRequest="2" />-->
                            <Button
                                FontFamily="icofont"
                                IsEnabled="False"
                                Text="{StaticResource UiDelete}"
                                ToolTipProperties.Text="Eliminar" />
                        </HorizontalStackLayout>
                    </Grid>
                </Frame>
            </Grid>
            <!--#endregion-->
        </Grid>
        <!--#endregion-->
    </Grid>

</ContentView>
