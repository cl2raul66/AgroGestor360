                            </RadioButton.Content>
                        </RadioButton>
                    </HorizontalStackLayout>-->
                </VerticalStackLayout>
                <ScrollView Grid.Row="1">
                    <CollectionView
                        ItemsSource="{Binding Products, Mode=OneWay}"
                        SelectedItem="{Binding SelectedProduct}"
                        SelectionMode="Single">
                        <CollectionView.ItemsLayout>
                            <LinearItemsLayout ItemSpacing="2" Orientation="Vertical" />
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="model:DTO4_1">
                                <Border Style="{StaticResource BorderItem}">
                                    <Grid ColumnDefinitions="*,auto" ColumnSpacing="8">
                                        <Label LineBreakMode="MiddleTruncation">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="{Binding ProductName, Mode=OneWay, StringFormat='{0}'}" TextColor="{StaticResource White}" />
                                                    <Span Text=" " />
                                                    <Span Text="{Binding Packaging.Value, Mode=OneWay, StringFormat='[{0:F2}'}" TextColor="{StaticResource White}" />
                                                    <Span Text=" " />
                                                    <Span Text="{Binding Packaging.Unit, Mode=OneWay, StringFormat='{0}]', Converter={StaticResource UnitToAbbreviation}}" TextColor="{StaticResource White}" />
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                        <Label
                                            Grid.Column="1"
                                            LineBreakMode="TailTruncation"
                                            Text="{Binding ArticlePrice, StringFormat='Precio: {0:F2}'}"
                                            TextColor="{StaticResource White}" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </ScrollView>
                <Frame Grid.Row="2" Padding="8">
                    <Grid ColumnDefinitions="*,auto" ColumnSpacing="8">
                        <HorizontalStackLayout Grid.Column="1" Spacing="8">
                            <Button
                                Command="{Binding CreateOfferCommand}"
                                FontFamily="icofont"
                                IsEnabled="{Binding SelectedProduct, Mode=OneWay, Converter={ctk:IsNotNullConverter}}"
                                Text="{StaticResource Gift}"
                                ToolTipProperties.Text="Crear oferta" />
                            <!--<BoxView
                                BackgroundColor="{StaticResource Gray300}"
                                CornerRadius="2"
                                WidthRequest="2" />-->
                            <!--<Button
                                Command="{Binding AddProductCommand}"
                                FontFamily="icofont"
                                Text="{StaticResource Plus}"
                                ToolTipProperties.Text="Agregar" />-->
                            <Button
                                Command="{Binding DeleteProductCommand}"
                                FontFamily="icofont"
                                IsEnabled="{Binding SelectedProduct, Mode=OneWay, Converter={ctk:IsNotNullConverter}}"
                                Text="{StaticResource UiDelete}"
                                ToolTipProperties.Text="Eliminar" />
                        </HorizontalStackLayout>
                    </Grid>
                </Frame>
            </Grid>
            <!--#endregion-->
            <BoxView
                Grid.RowSpan="3"
                Grid.Column="3"
                BackgroundColor="{StaticResource Gray300}"
                CornerRadius="2"
                WidthRequest="2" />
            <!--#region VISTA DE OFERTAS-->
            <Grid
                Grid.Column="4"
                RowDefinitions="auto,*,auto"
                RowSpacing="8">
