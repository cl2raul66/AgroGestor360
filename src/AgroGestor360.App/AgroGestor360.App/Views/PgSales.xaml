                </HorizontalStackLayout>-->
            </VerticalStackLayout>
            <ScrollView Grid.Row="1">
                <CollectionView
                    ItemsSource="{Binding Invoices}"
                    SelectedItem="{Binding SelectedInvoice}"
                    SelectionChanged="OnSelectionChanged"
                    SelectionMode="Single">
                    <CollectionView.ItemsLayout>
                        <GridItemsLayout
                            HorizontalItemSpacing="2"
                            Orientation="Vertical"
                            Span="4"
                            VerticalItemSpacing="2" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="model:DTO10">
                            <Border Style="{StaticResource BorderItemForSales}">
                                <Grid RowDefinitions="auto,auto,auto">
                                    <Border
                                        BackgroundColor="#45111111"
                                        StrokeShape="RoundRectangle 4"
                                        StrokeThickness="0" />
                                    <Grid
                                        Padding="8"
                                        ColumnDefinitions="*,auto"
                                        ColumnSpacing="8">
                                        <HorizontalStackLayout Spacing="8">
                                            <Label
                                                FontAttributes="Bold"
                                                Text="{Binding Date, StringFormat='{0:dd} {0:MMMM} {0:yyyy}'}"
                                                TextColor="{StaticResource White}"
                                                TextTransform="Uppercase" />
                                        </HorizontalStackLayout>
                                        <Label
                                            Grid.Column="1"
                                            FontAttributes="Bold"
                                            Text="{Binding TotalAmount, StringFormat='TOTAL: {0:N2}'}"
                                            TextColor="{StaticResource White}" />
                                    </Grid>
                                    <VerticalStackLayout
                                        Grid.Row="1"
                                        Padding="8,4"
                                        Spacing="2">
                                        <Label Text="{Binding Code, StringFormat='No.: {0}'}" TextColor="{StaticResource White}" />
                                        <Label Text="{Binding SellerName, StringFormat='Vendedor: {0}'}" TextColor="{StaticResource White}" />
                                        <Label Text="{Binding CustomerName, StringFormat='Cliente: {0}'}" TextColor="{StaticResource White}" />
                                    </VerticalStackLayout>
                                    <Border
                                        Grid.Row="2"
                                        BackgroundColor="#45111111"
                                        StrokeShape="RoundRectangle 4"
                                        StrokeThickness="0" />
                                    <Grid
                                        Grid.Row="2"
                                        Padding="8"
                                        ColumnDefinitions="*,auto"
                                        ColumnSpacing="8">
                                        <HorizontalStackLayout Spacing="8">
                                            <Label
                                                FontAttributes="Bold"
                                                IsVisible="{Binding DaysRemaining, Converter={ctk:IntToBoolConverter}}"
                                                Text="{Binding DaysRemaining, StringFormat='Vence en {0} días'}"
                                                TextColor="{StaticResource White}"
                                                TextTransform="Uppercase" />
                                        </HorizontalStackLayout>
                                        <Label
                                            Grid.Column="1"
                                            FontAttributes="Bold"
                                            Text="{Binding Paid, StringFormat='PAGADO: {0:N2}'}"
                                            TextColor="{StaticResource White}" />
